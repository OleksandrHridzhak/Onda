{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Onda",
  "version": "2.2.0",
  "identifier": "com.onda.app",
  "build": {
    "frontendDist": "../render/build",
    "devUrl": "http://localhost:3000",
    "beforeDevCommand": "cd render && npm start",
    "beforeBuildCommand": "cd render && npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "Onda",
        "width": 1920,
        "height": 1080,
        "resizable": true,
        "fullscreen": false,
        "decorations": false
      }
    ],
    "security": {
      "csp": null
    },
    "withGlobalTauri": true
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "webviewInstallMode": {
        "type": "embedBootstrapper"
      }
    }
  }
}
