{
  "name": "onda-mobile",
  "version": "1.0.0",
  "description": "Onda mobile app with Capacitor",
  "private": true,
  "scripts": {
    "sync": "cap sync android",
    "open": "cap open android",
    "run": "cap run android",
    "build:apk": "cd android && gradlew assembleDebug && echo APK: android/app/build/outputs/apk/debug/app-debug.apk",
    "build:release": "cd android && gradlew assembleRelease",
    "dev": "npm run sync && npm run run"
  },
  "dependencies": {
    "@capacitor/android": "^7.2.0",
    "@capacitor/core": "^7.2.0"
  },
  "devDependencies": {
    "@capacitor/cli": "^7.2.0"
  }
}
