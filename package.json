{
  "name": "onda-app-dev",
  "version": "2.1.0",
  "main": "main.bundle.js",
  "scripts": {
    "start": "concurrently \"npm:watch:webpack\" \"npm:start:react\" \"npm:start:electron\"",
    "start:react": "cd render && npm start",
    "start:electron": "nodemon electron .",
    "build:webpack": "webpack --config webpack.config.js",
    "watch:webpack": "webpack --config webpack.config.js --mode=development --watch",
    "dist": "npm run build:webpack && electron-builder",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "planner",
    "task manager",
    "sprint",
    "weekly planning",
    "productivity",
    "tasks",
    "organization"
  ],
  "author": "Oleksandr Hridzhak <3",
  "license": "Proprietary â€“ non-commercial use only",
  "description": "Task management tool with sprint-based weekly planning.",
  "devDependencies": {
    "concurrently": "^9.2.1",
    "dotenv": "^17.2.3",
    "electron": "^35.1.4",
    "electron-builder": "^26.0.12",
    "electron-packager": "^17.1.2",
    "node-cron": "^4.2.1",
    "playwright": "^1.55.1",
    "prettier": "^3.6.2",
    "webpack": "^5.102.1",
    "webpack-cli": "^6.0.1"
  },
  "build": {
    "asar": false,
    "appId": "com.onda.onda",
    "productName": "Onda 2.1",
    "electronLanguages": [
      "en-US",
      "uk"
    ],
    "publish": null,
    "directories": {
      "buildResources": "assets",
      "output": "dist"
    },
    "win": {
      "target": "nsis",
      "icon": "assets/onda-logo.ico",
      "compression": "maximum"
    },
    "files": [
      "render/build/",
      "tray_icon.png",
      "package.json",
      "main.bundle.js",
      "preload.bundle.js",
      "userData/**",
      "assets/**",
      "!**/*.{pdb,zip,tgz,gz,tar,asar.unpacked,node,test,spec,d.ts,map,js.map}",
      "!**/*.{md,txt,log}",
      "!**/node_modules/electron-devtools-installer/**",
      "!**/node_modules/electron-debug/**",
      "!.env"
    ]
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
