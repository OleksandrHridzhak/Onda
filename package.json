{
  "name": "electron-backend",
  "version": "2.0.0",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [],
  "author": "Oleksandr Hridzhak <3",
  "license": "ISC",
  "description": "",
  "devDependencies": {
    "electron": "^35.1.4",
    "electron-builder": "^26.0.12",
    "electron-packager": "^17.1.2",
    "playwright": "^1.55.1",
    "prettier": "^3.6.2"
  },
  "build": {
    "asar": true,
    "appId": "com.onda.onda",
    "productName": "Onda",
    "electronLanguages": ["en-US", "uk"],
    "publish": null,
    "directories": {
      "buildResources": "assets",
      "output": "dist"
    },
    "win": {
      "target": "nsis",
      "icon": "assets/onda-logo.ico",
      "compression": "maximum"
    },
    
    "files": [
      "render/build/",
      "tray_icon.png",
      "preload.js",
      "main.js",
      "package.json",
      ".env",
      "utils/**",
      "userData/**",
      "services/**",
      "constants/**",
      "assets/**",
      "api/**",
      "!**/*.{pdb,zip,tgz,gz,tar,asar.unpacked,node,test,spec,d.ts,map,js.map}",
      "!**/*.{md,txt,html,log}",
      "!**/node_modules/electron-devtools-installer/**",
      "!**/node_modules/electron-debug/**"
    ]
  },
  "dependencies": {
    "dotenv": "^17.2.0",
    "node-cron": "^4.0.5"
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
